<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guessthatmess.MainActivity">

    <com.example.guessthatmess.DoodleCanvas
        android:id="@+id/doodleCanvas"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp" />

    <Button
        android:id="@+id/btn_detect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_next"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="#FFC107"
        android:onClick="onDetectClick"
        android:text="Guess"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="#FF9800"
        android:onClick="onNextClick"
        android:text="Next Doodle" />

    <Button
        android:id="@+id/btn_clear3"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="#FF9800"
        android:onClick="onClearClick"
        android:text="Clear" />

    <TextView
        android:id="@+id/txt_draw_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:background="#FFC107"
        android:text="Doodle... "
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/txt_timer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:layout_marginRight="167dp"
        android:layout_marginBottom="105dp"
        android:text="TextView"
        android:textColor="#FF9800"
        android:textStyle="bold"
        android:textSize="24sp" />



    <TextView
        android:id="@+id/txt_result_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="97dp"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_marginLeft="20dp"
        android:text="TextView" />


</RelativeLayout>
